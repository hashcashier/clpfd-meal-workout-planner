%ol.breadcrumb{style: "background: white;" }
  %li
    %a{href:"/"} Home
  %li.active{href:"/"} Meal Planner

%h1 Meals Planner

%div.container-fluid
  .row.form-group
    %label{ for: "meals-goal" } Goal
    %select.form-control{ id: "meals-goal"}
      %option{ value: "cut" } Cutting
      %option{ value: "bulk" } Bulking
  .row.form-group
    %label{ for: "meals-num-meals" } Number of Meals per day
    %input.form-control{ id: "meals-num-meals", type: "number", min: "2", max: "6", value: "3" }
  .row.form-group
    %label{ for: "meals-weight" } Weight
    %input.form-control{ id: "meals-weight", type: "number", min: "0", max: "200", value: "70" }
  .row.form-group
    %label{ for: "meals-fat-percentage" } Fat percentage
    %input.form-control{ id: "meals-fat-percentage", type: "number", min: "0", max: "100", value: "10" }
  .row.form-group
    %label{ for: "meals-activity-variable" } Activity Variable
    %input.form-control{ id: "meals-activity-variable", type: "number", min: "1.2", max: "2.2", step: "0.1", value: "1.2" }
  .row.form-group
    %input.btn.form-control.btn-info{ id: "meals-submit", type: "submit" }

#loading.row{ style: "display:none;" }
  .col-md-2.col-md-offset-5
    .row
      %img.col-md-4.col-md-offset-4{ src: "http://vstark.net/images/2012-05-30-ajax-progress-indicator/6291334.gif" }

#solution.row
  %nav.text-center
    %ul.pagination{ id: "pagination" }
  #meals
